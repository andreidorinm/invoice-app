{
  "name": "clarfactura-in-nir",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "vite && pnpm watch-tailwind",
    "watch-tailwind": "npx tailwindcss -i ./src/index.css -o ./dist/output.css --watch",
    "build": "tsc && vite build && electron-builder build --config electron-builder.json --win --publish=always",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "electron-context-menu": "^3.6.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.8",
    "exceljs": "^4.4.0",
    "fast-csv": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.15",
    "daisyui": "^3.7.5",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.14.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "ClarFactura in NIR",
    "productName": "ClarFactura in NIR",
    "publish": [
      {
        "provider": "github",
        "owner": "andreidorinm",
        "repo": "invoice-app"
      }
    ]
  }
}
